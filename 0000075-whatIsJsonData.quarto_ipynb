        "           }\n",
        "       },\n",
        "       {\n",
        "         \"hardcover\": false,\n",
        "         \"title\": \"Python For Perfectionists\",\n",
        "         \"copyright\": 2018,\n",
        "         \"categories\": [\"Python\", \"technology\"],\n",
        "         \"author\" : \n",
        "           {\n",
        "             \"title\": \"Dr.\",\n",
        "             \"first\": \"Sue\",\n",
        "             \"last\": \"Smith\"\n",
        "           }\n",
        "       },\n",
        "       {\n",
        "         \"hardcover\": true,\n",
        "         \"title\": \"Cooking For Programmers\",\n",
        "         \"copyright\": 2018,\n",
        "         \"categories\": [\"cooking\"],\n",
